bindsym $mod+control+t exec caja --no-desktop --browser -n /home/innes/
bindsym $mod+control+i exec python3 -m qtconsole
bindsym $mod+control+j exec ~/anaconda3/bin/jupyter-notebook

###############################
# Bind programs to workspaces #
###############################

# Spotify is in beta and fails to set the window hinting correctly :(
for_window [class="Spotify"] move to workspace $ws9
# assign [class="Skype-beta"]  $ws9
assign [class="Steam"]  $ws10
assign [class="libreoffice"] $ws3
for_window [instance="__scratchpad"] move scratchpad 

###############################################
# Autorun commands at the start of a session  #
###############################################
exec --no-startup-id python3 -m qtconsole -name __scratchpad

# Drop resolution to something less insane in comparison to my work monitor
exec --no-startup-id xrandr --output eDP-1 --mode 1920x1080

# Wallpaper
exec_always --no-startup-id feh --bg-fill /home/innes/Pictures/Wallpapers/dunstanburgh.jpg
# exec_always --no-startup-id feh --bg-fill /home/innes/Pictures/Wallpapers/Computer-Programmer-Wallpaper.png
