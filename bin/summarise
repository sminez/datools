#! /usr/bin/python3
import pandas as pd
import argparse
import sys


parser = argparse.ArgumentParser(
    description='Summarise data in csv or json format'
)
parser.add_argument('file', nargs='?')
args = parser.parse_args()

if args.file:
    f = open(args.file, 'r')
elif not sys.stdin.isatty():
    f = sys.stdin
else:
    print('ERROR: unable to detect input', file=sys.stderr)
    sys.exit(42)

print(pd.read_csv(f).describe())
